#!/usr/bin/env bash
# Install nginx and start it
apt-get -y install nginx
echo "Hello World!" >> /var/www/html/index.html
sudo chown -R $USER:$USER /var/www/html
sudo chmod -R 755 /var/www
sed -i '37i\rewrite ^/redirect_me https://github.com/Daniel-bee/alx-system_engineering-devops permanent;' /etc/nginx/sites-available/default

service nginx start
